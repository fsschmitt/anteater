{
  "name": "anteater",
  "productName": "anteater",
  "version": "1.0.0",
  "description": "Automate the bordeom out of BlutAnt",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "run-p serve start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build": "parcel build electron/index.html --public-url .",
    "serve": "parcel electron/index.html",
    "watch": "parcel electron/index.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/icons/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "background": "./assets/anteater.jpeg",
            "format": "ULFO",
            "icon": "./assets/icons/icon.icns",
            "name": "anteater"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "maintainer": "Bruno Lopes",
              "homepage": "https://www.linkedin.com/in/bruno-lopes-a73b48103/"
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "@electron-forge/maker-dmg": "^6.0.0-beta.49",
    "classnames": "^2.2.6",
    "electron-squirrel-startup": "^1.0.0",
    "puppeteer": "^2.1.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "tailwindcss": "^1.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.49",
    "@electron-forge/maker-deb": "^6.0.0-beta.49",
    "@electron-forge/maker-rpm": "^6.0.0-beta.49",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.49",
    "@electron-forge/maker-zip": "^6.0.0-beta.49",
    "electron": "8.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.4"
  }
}
